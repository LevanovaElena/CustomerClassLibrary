@model IEnumerable<CustomerClassLibrary.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            TPA
        </th>
        <th>
            Id
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AddressesList)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.FirstName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.LastName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PhoneNumber)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Email)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TotalPurchasesAmount)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.IdCustomer)
    </td>
    <td>
        <table class="table table-light table-bordered table-sm fs-6">
            @for (var index = 0; index < item.AddressesList.Count; index++)
            {
                var address = item.AddressesList[index];
                <tr>
                    <td>
                        @address.Country,
                        @address.State, 
                        @address.PostalCode,
                        @address.City,
                        @address.TypeAddress,
                        @address.AddressLine
                        @address.AddressLine2
                    </td>
                </tr>
            }
        </table>
</td>
    <td>
        @Html.ActionLink("Edit", "Edit", new {  id=item.IdCustomer  }) |
        @Html.ActionLink("Details", "Details", new { id=item.IdCustomer  }) |
        @Html.ActionLink("Delete", "Delete", new {  id=item.IdCustomer  })
    </td>
    </tr>
}

</table>
